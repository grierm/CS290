<h2>Adjust Your Exercise</h2>

<!-- Use this form to update an existing exercise. -->
<form action="/updateExercise">
    Name:
    <input type="text" name="exercise" id="exercise" value="{{results.name}}">
    <br><br>
    Reps:
    <input type="number" name="reps" id="reps" value="{{results.reps}}">
    <br><br>
    Weight:
    <input type="number" name="weight" id="weight" value="{{results.weight}}">
    <br><br>
    Date:
    <input type="date" name="date" id="date" value="{{results.date}}">
    <br><br>
    LBS:
    {{#if results.lbs}}
		<input type="checkbox" name="lbsCheck" id="unitCheck" checked>
    <br><br>
	{{else}}
		<input type="checkbox" name="lbsCheck" id="unitCheck">
    <br><br>
    {{/if}}
    <input type="hidden" name="id" value={{results.id}}>
    <input type="submit" name="updateExercise" value="Update Exercise" id="updateExercise">
</form>