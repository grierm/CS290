<h2>Add Your Favorite Exercise Below</h2>

<!-- The form for entering excercises of your choice-->
<form id="addExercise">
    Exercise:
    <input type="text" name="exercise" id="exercise">
    <br><br>
    Reps:
    <input type="number" name="reps" id="reps "min="1">
    <br><br>
    Weight:
    <input type="number" name="weight" id="weight "min="1">
    <br><br>
    Date:
    <input type="date" name="date" id="date">
    <br><br>
    LBS:
    <input type="checkbox" name="unitCheck" id="unitCheck"><br>
    <input type="submit" name="Add Exercise" value="Add Exercise" id="addExerciseButton">
</form><br>

<!-- The data table for your favorite exercises-->
<table id="exerciseTable">
    <tr>
        <th>Name</th>
        <th>Reps</th>
        <th>Weight</th>
        <th>Date</th>
        <th>Unit</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    
    {{#if results}}
        {{#each results}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.reps}}</td>
                <td>{{this.weight}}</td>
                <td>{{this.date}}</td>
                <td>{{this.lbs}}</td>

                <!-- This sets up the update button-->
                <td><a href="/updateTable?id={{this.id}}"><input type="button" value="Update"></a></td>
                <td>
                    <!-- This sets up the delete button-->
                    <input type="button" name="delete" value="Delete" onClick="deleteData('exerciseTable',{{this.id}})">
                    <input type="hidden" id="delete{{this.id}}">
                </td>
            </tr>
        {{/each}}
    {{/if}}
</table>
<!-- Connect to the scipt file to run the JavaScript -->
<script src="script.js"></script>